<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/assets/style.css" type=text/css rel=stylesheet />
    <title>Usuarios</title>
</head>
<body>
    <table>
        <thead>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th></th>
            <th></th>
        </thead>

            <% Object.keys(Users).forEach((prop) => { %>
                <tr>
                <td> <%= Users[prop].name %> </td> 
                <td> <%= Users[prop].email %> </td>
                <td> <%= Users[prop].password %> </td>
                <td><a href="<%= `findById/${Users[prop]._id}` %>">Editar</a></td>
                <td><a href="<%= `deleteUser/${Users[prop]._id}` %>" onclick="return alerta()">Borrar</a></td>
                </tr>
                <% }); %> 
               
    </table>

    <a href="addUser">Agregar</a>
    <script>
        function alerta() {
            const borrar = confirm('¿Está seguro que desea eliminar este usuario?');
            
            if (borrar) 
                return true;
            else 
                return false;
        
        }
    </script>

</body>
</html>